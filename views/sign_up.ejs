<link rel="stylesheet" href="/css/sign_up.css">

<div id = "container">
    <form action="/users/create" method="POST">
        <label for = "name" ><b>Name</b></label>
        <input type = "text" id = "name" required name="name" placeholder="Your Name">
        <label for = "email"><b>Email</b></label>
        <input type = "email" id = "email" required name = "email" placeholder="Your Email">
        <label for="password"><b>Password</b></label>
        <input type = "password" id = "password" required name = "password" placeholder="Your Password"> 
        <input type = "password" id = "confirm_password" required name = "confirm_password" placeholder="Confirm Password"> 
        <input type="submit" style="width:40% ;" value="Sign up" id = "submitBtn">
    </form>
</div>
