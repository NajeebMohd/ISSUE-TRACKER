<link rel="stylesheet" href="/css/preview.css">

<div id = "container">
  <form action="/project/create-project" method="post" id = "form-of-project">

    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">Name of Project</label>
      <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Project Name" name = "ProjectName" required>
    </div>
    
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">Author</label>
      <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Author name" name = "author" required>
    </div>
    
    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label">Discription</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" name="discription" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary col-4" >submit</button>

  </form>

  <div id = "project-lists">
    <ul class="list-group">
      <% for(project of projects){ %>

        <a href="/project/project-details/<%=project.id%>">
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= project.ProjectName %>
            <span class="badge bg-primary rounded-pill"><%= project.author %></span>
          </li>
        </a>        

      <% } %>
    </ul>
  </div>

</div>